<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/main_button_dark_violet" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke android:width="2dp" android:color="@color/main_button_dark_violet" />
            <solid android:color="@color/main_button_light_violet" />
            <corners android:radius="10dp" />
        </shape>
    </item>


</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@color/common_button_press_bg"/>
        </shape>
    </item>

    <item>
        <shape>
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/common_button_border"/>
            <solid android:color="@color/common_button_bg"/>
        </shape>
    </item>
</selector>
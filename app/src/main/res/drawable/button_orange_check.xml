<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="@color/mine_button_dark_orange" />
            <stroke android:width="2dp" android:color="@color/main_button_light_red" />
        </shape>

    </item>

    <item android:state_pressed="false">

        <shape>
            <solid android:color="@color/mine_button_light_orange" />
            <stroke android:width="2dp" android:color="@color/main_button_light_red" />
        </shape>

    </item>
</selector>